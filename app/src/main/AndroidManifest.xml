<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexey.msulife" >
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.springlabs.msulife.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="com.springlabs.msulife.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.springlabs.msulife.ArticleActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.springlabs.msulife.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.springlabs.msulife.FullScreenImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_image"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
